        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status                 :  "
            android:textSize="16dp" />


        <TextView
            android:id="@+id/showstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nomor"
            android:textSize="16dp" />

    </LinearLayout>





</LinearLayout>
